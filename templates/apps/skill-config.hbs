<form autocomplete="off">
  <p class="notes">{{localize "SHAPER.SkillConfigurationHint"}}</p>
  <div class="form-group">
    <label>{{localize "SHAPER.SkillBonusCheck"}}</label>
    <input name="system.skills.{{skillId}}.bonuses.check" type="text" value="{{skill.bonuses.check}}">
  </div>
  <hr>
  <div class="form-group">
    <label>{{localize "SHAPER.BonusAbilitySkill"}}</label>
    <input name="system.bonuses.abilities.skill" type="text" value="{{bonusGlobal}}">
    <p class="notes">{{localize "SHAPER.SkillGlobalBonusCheckHint"}}</p>
  </div>
  <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
